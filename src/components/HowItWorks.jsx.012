<section id="how" class="bg-section" style="padding: var(--space-12) 0;">
  <div class="container" style="max-width:1100px;margin:0 auto;padding:0 var(--space-6);display:grid;gap:var(--space-6);grid-template-columns: repeat(auto-fit,minmax(280px,1fr));">
    <!-- Perceive -->
    <article class="nero-card" style="padding: var(--space-6);">
      <h2 class="h2">Perceive</h2>
      <p class="text-muted" style="margin-top: var(--space-2);">Sensors and signals captured continuously.</p>
      <div style="height:160px;margin-top:var(--space-4); position:relative;">
        <div class="act-ring" style="
          position:absolute; inset:0; margin:auto; width:120px; aspect-ratio:1/1;
          border-radius:50%; border:2px solid var(--nero-accent-2);
          animation: ringExpand var(--dur-3) var(--easing) infinite; opacity:.5;">
        </div>
      </div>
    </article>

    <!-- Correlate -->
    <article class="nero-card" style="padding: var(--space-6);">
      <h2 class="h2">Correlate</h2>
      <p class="text-muted" style="margin-top: var(--space-2);">Signals linked and weighed to infer intent.</p>
      <div style="height:160px;margin-top:var(--space-4);">
        <svg viewBox="0 0 200 160" class="correlate-svg" aria-hidden="true" style="width:100%;height:100%;">
          <g class="nodes">
            <circle cx="32" cy="38" r="3"/>
            <circle cx="84" cy="92" r="3"/>
            <circle cx="120" cy="56" r="3"/>
            <circle cx="162" cy="128" r="3"/>
            <circle cx="56" cy="118" r="3"/>
          </g>
          <g class="links">
            <line x1="32"  y1="38"  x2="84"  y2="92"/>
            <line x1="84"  y1="92"  x2="120" y2="56"/>
            <line x1="84"  y1="92"  x2="162" y2="128"/>
            <line x1="56"  y1="118" x2="84"  y2="92"/>
          </g>
        </svg>
      </div>
    </article>

    <!-- Act -->
    <article class="nero-card" style="padding: var(--space-6);">
      <h2 class="h2">Act</h2>
      <p class="text-muted" style="margin-top: var(--space-2);">Decisions executed safely at machine speed.</p>
      <div style="height:160px;margin-top:var(--space-4); display:grid; place-items:center;">
        <button class="btn btn-primary">Trigger a safe action</button>
      </div>
    </article>
  </div>
</section>

